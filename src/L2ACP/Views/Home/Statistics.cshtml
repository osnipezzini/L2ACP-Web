@{
    ViewData["Title"] = Localizer["Statistics Page"];
}
@using Microsoft.AspNetCore.Mvc.Localization
@model L2ACP.Models.StatsViewModel
@inject IViewLocalizer Localizer
<div class="wrapper wrapper-content animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#tab-1" aria-expanded="true">@Localizer["Top PvP"]</a></li>
                    <li class=""><a data-toggle="tab" href="#tab-2" aria-expanded="false">@Localizer["Top PK"]</a></li>
                    <li class=""><a data-toggle="tab" href="#tab-3" aria-expanded="false">@Localizer["Top Time"]</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>@Localizer["Player name"]</th>
                                        <th>@Localizer["Level"]</th>
                                        <th>@Localizer["Class"]</th>
                                        <th>@Localizer["Pvp"]</th>
                                        <th>@Localizer["Pk"]</th>
                                        <th>@Localizer["Online time"]</th>
                                        <th>@Localizer["Status"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int pvpCount = 1;}
                                    @foreach (var player in Model.TopPvp)
                                    {
                                        <tr>
                                            <td>@pvpCount</td>
                                            <td>@player.CharName</td>
                                            <td>@player.Level</td>
                                            <td>@player.ClassName</td>
                                            <td>@player.PvpKills</td>
                                            <td>@player.PkKills</td>
                                            @{
                                                TimeSpan time = TimeSpan.FromSeconds(player.OnlineTime);
                                                var parsed = time.ToString(@"d\:h\:m\:s").Split(':');
                                            }
                                            <td>@parsed[0] @Localizer["days"] @parsed[1] @Localizer["hours"] @parsed[2] @Localizer["mins"]</td>
                                            <td>
                                                @if (player.Online == 0)
                                                {<span class="label label-danger">@Localizer["Offline"]</span>}
                                                else
                                                {<span class="label label-primary">@Localizer["Online"]</span>}
                                        </td>
                                    </tr>
                                                    pvpCount++;
                                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div id="tab-2" class="tab-pane">
